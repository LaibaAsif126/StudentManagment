@using StudentManagement.Models
@model StudentDto

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirm Delete</h4>
                </div>
                <div class="card-body">
                    <p class="mb-4 text-danger fw-semibold">Are you sure you want to delete this student?</p>

                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 fw-semibold">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 fw-semibold">Department</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Department)</dd>

                        <dt class="col-sm-4 fw-semibold">Enrolled Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EnrolledDate)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
