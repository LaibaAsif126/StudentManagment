@using StudentManagement.Models
@model StudentDto

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-white shadow rounded-lg overflow-hidden border border-light">
                <div class="bg-danger text-white px-4 py-3 border-bottom">
                    <h4 class="mb-0 font-semibold">Confirm Delete</h4>
                </div>
                <div class="px-4 py-4">
                    <p class="mb-4 text-danger fw-semibold">Are you sure you want to delete this student?</p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold text-gray-700">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 fw-semibold text-gray-700">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 fw-semibold text-gray-700">Department</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Department)</dd>

                        <dt class="col-sm-4 fw-semibold text-gray-700">Enrolled Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EnrolledDate)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-md shadow-sm">Cancel</a>
                            <button type="submit" class="btn btn-danger rounded-md shadow-sm">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

