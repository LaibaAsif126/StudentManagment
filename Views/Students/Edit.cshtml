@using StudentManagement.Models
@model CreateStudentDto

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-white shadow rounded-lg overflow-hidden border border-light">
                <div class="bg-yellow-400 text-dark px-4 py-3 border-bottom">
                    <h4 class="mb-0 font-semibold">Edit Student</h4>
                </div>
                <div class="px-4 py-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold text-gray-700"></label>
                            <input asp-for="Name" class="form-control shadow-sm rounded-md" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold text-gray-700"></label>
                            <input asp-for="Email" class="form-control shadow-sm rounded-md" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Department" class="form-label fw-semibold text-gray-700"></label>
                            <input asp-for="Department" class="form-control shadow-sm rounded-md" />
                            <span asp-validation-for="Department" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EnrolledDate" class="form-label fw-semibold text-gray-700"></label>
                            <input asp-for="EnrolledDate" type="date" class="form-control shadow-sm rounded-md" />
                            <span asp-validation-for="EnrolledDate" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CourseId" class="form-label fw-semibold text-gray-700"></label>
                            <select asp-for="CourseId" class="form-control shadow-sm rounded-md" asp-items="ViewBag.CourseId"></select>
                            <span asp-validation-for="CourseId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-md shadow-sm">Cancel</a>
                            <button type="submit" class="btn btn-primary rounded-md shadow-sm">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

